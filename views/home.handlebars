<!--Homepage-->
<div class="container">
  <div class="col-md-12 jumbotron">
    <div class="transparency-layer">
      <div class="text-center">
        <h1> The New York Times: Comment It!</h1>
      </div>
      <div class="col-md-12 info">
        <h3>Save an article to make a comment!</h3>
      </div>
    </div>
  </div>

  <div class="col-md-12">
    {{#if article}} {{#each article}}
    <div class="panel panel-default">
      <div class="panel-heading">
        <h4>{{this.title}}</h4>
      </div>
      <div class="panel-body">
        <p> {{this.summary}}</p>
        <a href={{this.link}} target="_blank">{{this.link}}</a>
        <br>
        <br>
        <button type="button" class="btn btn-success save" data-id={{this._id}}>Save Article</button>
      </div>
    </div>
    {{/each}} {{else}}
    <div class="panel panel-default">
      <div class="panel-body">
        <h4>Uh Oh. Looks like we don't have any new articles.</h4>
      </div>
    </div>
    {{/if}}
  </div>
</div>